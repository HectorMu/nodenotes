<%- include('index_partials/header.ejs')-%>
<div class="container" style="margin-top: 100px;">
    <% if(error_msg.length>0){%>
        <%-include('warnings/alert.ejs');-%>
      <%}%>
    <div class="row">
        <div class="col col-md-6 col-lg-6 mx-auto">
            <div id="recoverpassword-card" class="card">
                <h5 class="card-header bg-dark text-center text-white" style="font-weight: bold; font-size: 40px;">Your email address account</h5>
                <div class="card-body">
                 <form action="/recover" method="POST">
                    <input class="form-control mb-2" type="email" placeholder="Email" name="email" id="email" required>
                    <small><p id="emailMessage"></p></small>
                <button type="submit" id="send" class="btn mt-4 btn-outline-dark btn-block">Send</button>
                </form>
                </div>
              </div> 
        </div>
    </div>
</div>
<link rel="stylesheet" type="text/css" href="/footerstyle.css">
<script type="module" src="js/UserValidations/recoverRealtimeValidation.js"></script>
<script>
window.sr = ScrollReveal();
sr.reveal('#recoverpassword-card',{
    duration: 1000,
    origin: 'bottom',
    distance:'60px'
});

</script>

