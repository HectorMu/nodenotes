<%- include('index_partials/header.ejs')-%>
<link rel="stylesheet" type="text/css" href="/signupstyle.css">
<section style="background-color: whitesmoke;" class="pt-3 pb-5">
    <div class="container " style="margin-top: 100px;">
        <% if(error_msg.length>0){%>
            <%-include('warnings/alert.ejs');-%>
          <%}%>
        <div class="row">
            <div class="col-lg-5 col-md-6 col-12 mx-auto">
                <div id="signup-form" class="card bg-dark text-white" style="width: 100%; height: 100%;">
                    <div class="card-body ">
                      <h3 class="card-title text-center" style="font-weight: bold; font-size: 34px;">Create an Account</h3>
                      <form action="/signup" method="post">
                        <div class="form-group" >
                            <input id="first" type="text" name="firstname" placeholder="First Name" class="form-control" required>
                        </div>  
                        <div class="form-group">
                            <input id="last"  type="text" name="lastname" placeholder="Last Name" class="form-control" required>
                        </div> 
                        <div class="form-group">
                            <input id="email" type="email" name="email" placeholder="Email" class="form-control" required>
                        </div>  
                        <div class="form-group">
                            <input id="pass" type="password" name="pass" placeholder="Password" class="form-control" required>
                            <small><p id="res"></p></small>
                        </div>  
                        <div class="form-group">
                            <input  id="confirm" type="password" name="confirm"  placeholder="Confirm Password" class="form-control" required>
                            <small><p id="match"></p></small>
                        </div>  
                        <button id="signup" type="submit" class="btn btn-outline-light btn-block">Â¡Sign up!</button>                       
                    </form>          
    
                    </div>
                  </div>
            </div>
        </div>
    </div>
    <script src="js/signup-validations.js"></script>
    <script>
        window.sr = ScrollReveal();
        sr.reveal('#signup-form',{
        duration: 1500,
        origin: 'bottom',
        distance:'100px'
        });
        sr.reveal('.navbar',{
        duration: 1000,
        origin: 'top',
        distance:'100px'
        });

    </script>
</section>
<%-include('index_partials/footer.ejs');-%>
