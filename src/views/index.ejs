<%- include('index_partials/header.ejs')-%>
    <section id="home" class=" pt-5">
        <header id="header">
                <div class="row bg-custom-1 py-5" >
                    <div class="col-12 col-md-6 col-lg-6 col-xl-6 ">
                        <div class="container">
                            <div class="header-content-left d-flex align-items-end  flex-column">
                                <img src="assets/addnotes.svg" class="w-75" alt="">
                            </div>
                        </div>        
                    </div>
                    <div class="col-12 col-md-6 col-lg-6 col-xl-6 mt-2 mb-5 pb-5">
                        <div class="container">
                            <div id="header-card" class="card rounded-0">
                                <div class="card-body">
                                    <h1 class="display-4 pt-3 text-center " style="font-weight: bolder;">¡Make
                                        your notes!</h1>
                                    <p class="mt-5 text-justify" style="font-size: 22px;"> <a href="/">Node notes</a> allows you
                                        save your
                                        notes in the web and get full control of your notes, editing the title, content and
                                        choosing their importance.
                                    </p>
                                    <a href="/signup" class="btn btn-secondary btn-lg mt-5 mb-1 btn-block">Start to create</a>
                                    <small style="font-size: 17px;">If you already have one. <a href="/login">Log
                                            in.</a></small>
                                </div>
                            </div> 
                        </div>              
                    </div>
                </div>  
        </header>
    </section>
        <section id="howtostart" class="">
            <div class=" bg-dark py-5 text-center text-white">
                <h1 class="mt-4" style="font-weight: bolder;">¡In three simple steps start saving your notes!</h1>
                <div class="container mt-2">
                    <div class="d-flex flex-row justify-content-center">
                        <div id="circle1" class="circle mx-1">1</div>
                        <i id="arrow1" class="fas fa-arrow-circle-right fa-3x mx-1"></i>
                        <div id="circle2" class="circle mx-1">2</div>
                        <i id="arrow2" class="fas fa-arrow-circle-right fa-3x mx-1"></i>
                        <div id="circle3" class="circle mx-1">3</div>
                        <i id="check" class="fas fa-check fa-3x mx-1"></i>
                    </div>
                </div>   
            </div>
                <div class="row row-cols-sm-12 ">
                    <div class="col section-color-1 py-5 col-sm-12">
                        <div class="row">
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="stepone-left">
                                    <div class="d-flex justify-content-center mt-1 py-3">
                                        <h1 class="font-weight-bolder display-3">Step one</h1>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <h3 class="font-weight-bolder display-5">Sign in using your favorite email.</h3>
                                        <i class="far fa-envelope fa-6x mb-4 mt-5 d-none d-sm-block"></i>
                                    </div>  
                                </article>
                                 
                            </div>
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="stepone-right">
                                    <div class="d-flex justify-content-center">
                                        <img src="assets/signin.svg" class="w-75" alt="">
                                    </div>
                                </article>                        
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col section-color-2 py-5 col-sm-12">
                        <div class="row">
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="steptwo-left">
                                    <div class="d-flex justify-content-center">
                                        <img src="assets/login.svg" alt="" class="w-75">
                                    </div>   
                                </article>
                                                     
                            </div>
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="steptwo-right">
                                    <div class="d-flex justify-content-center mt-2 py-3">
                                        <h1 class="font-weight-bolder display-3">Step Two</h1>
                                    </div>
                                    <div class="mt-3 text-center ">
                                        <h3 class="font-weight-bolder display-5">Log in into your account.</h3>
                                        <i class="fas fa-unlock-alt fa-6x  mt-5  d-none d-sm-block"></i>
                                    </div>
                                </article>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col section-color-3 py-5 col-sm-12">
                        <div class="row">
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="stepthree-left">
                                    <div class="d-flex justify-content-center mt-1 py-3">
                                        <h1 class="font-weight-bolder display-3">Step Three</h1>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <h3 class="font-weight-bolder display-5">Start saving notes!.</h3>
                                        <i class="far fa-save fa-6x mb-4 mt-5  d-none d-sm-block"></i>
                                    </div>  
                                </article>                    
                            </div>
                            <div class="col col-md-6 col-sm-12 col-12">
                                <article id="stepthree-right">
                                    <div class="d-flex justify-content-center">
                                        <img src="assets/save.svg" class="w-75" alt="">
                                    </div>
                                </article>              
                            </div>
                        </div>
                    </div>
                    
                </div>
        </section>
        <section id="about" >
                <div  class="row">
                    <div class="col col-md-6 col-sm-12 col-12">
                        <div class="bg-custom-1 w-100 h-100 pt-2 px-2 d-flex flex-column text-center justify-content-center">
                                <h2 class="display-4 font-weight-bolder">¡Meet us!</h2>
                                <h2 class=" font-weight-bolder mt-4">Why choose Node Notes<i class="fas fa-question"></i></h2>
                                <p class=" mt-2" style="font-size: 22px;">You can watch some of the advantages to use Node 
                                Notes to manage your notes, we love to help our users to increase their productivity! </p>
                                <i class="fas fa-chart-line fa-6x"></i>
                        </div>
                    </div>
                    <div class="col col-md-6 col-sm-12 col-12 mt-5">
                        <div class="container">
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2">
                                <div class="col mb-2">
                                    <div id="card1" class="card">
                                        <div class="card-body">
                                          <h5 class="card-title text-center font-weight-bolder">Security</h5>
                                          <div class="text-center">
                                            <i class="fas fa-shield-alt fa-7x"></i>
                                            <p class="card-text mt-4">Your account is safe with us, we care about you.</p>
                                          </div>
                                        </div>
                                      </div>
                                </div>
                                <div class="col mb-2">
                                    <div id="card2" class="card">
                                        <div class="card-body">
                                            <h5 class="card-title text-center font-weight-bolder">Productivity</h5>
                                            <div class="text-center">
                                              <i class="fas fa-chart-bar fa-7x"></i>
                                              <p class="card-text mt-4">Improve your productivity managing your notes with us.</p>
                                            </div>
                                        </div>
                                      </div>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row row row-cols-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2 mt-2">
                                <div class="col">
                                    <div id="card3" class="card mb-4">
                                        <div class="card-body">
                                            <h5 class="card-title text-center font-weight-bolder">Fast and Friendly</h5>
                                            <div class="text-center">
                                              <i class="fas fa-bolt fa-7x"></i>
                                              <p class="card-text mt-4">Fast, elegant and user friendly.</p>
                                            </div>
                                        </div>
                                      </div>
                                </div>
                                <div class="col">
                                    <div id="card4" class="card mb-4">
                                        <div class="card-body">
                                            <h5 class="card-title text-center font-weight-bolder">Profile Customization</h5>
                                            <div class="text-center">
                                              <i class="fas fa-user-edit fa-7x"></i>
                                              <p class="card-text mt-4">It's your profile, enjoy it!.</p>
                                            </div>
                                        </div>
                                      </div>
                                </div>
                            </div>
                        </div>             
                    </div>
                </div>
        </section>
        <section id="contact">
            <div class="row">
                <div class="col col-sm-12 col-12 col-md-6 col-lg-6">
                    <div id="contactdiv" class="bg-whitesmoke py-5  w-100 h-100 pt-2 px-3 d-flex flex-column text-center justify-content-center">
                        <h2 class="display-4 font-weight-bolder">Contact</h2>
                        <h2 class=" font-weight-bolder mt-4">We will happy to help you!</h2>
                        <p class=" mt-2" style="font-size: 22px;">You can contact us for reporting bugs, for account help, and for recommendations to Improve
                        our software!.</p>
                        <i class="fas fa-envelope-open-text fa-6x"></i>
                </div>
                   
                </div>
                <div class="col col-sm-12 col-12 col-md-6 col-lg-6  ml-0 pl-0">
                    <div class="container">
                        <div id="formcard" class="card mt-5 mb-4">
                            <div class="card-body py-5">
                                <h2 class="display-4 font-weight-bolder text-center">Your data</h2>
                                <form id="contactForm" method="POST">
                                    <div class="form-group">
                                    </div>
                                    <input type="text" class="form-control mb-2" id="reply" name="_replyto"
                                        placeholder="Email">
                                    <textarea class="form-control" name="message" id="message" cols="30" rows="8"
                                        placeholder="Message"></textarea>
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn w-50  btn-secondary mt-2">Send</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
            
            <div id="backtop" class="d-flex justify-content-center">
                <a href="#home" class="btn btn-outline-dark rounded-circle mb-2" data-toggle="tooltip"
                    data-placement="bottom" title="Back to top"><i class="fas fa-arrow-up"></i></a>
            </div>
        </section>
    <script src="js/index-animations.js"></script>
    <script src="js/contactEmailHandler.js"></script>
    <%-include('index_partials/footer.ejs')-%>
