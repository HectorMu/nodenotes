<%-include('index_partials/header.ejs');-%>


<div class="container" style="margin-top: 100px;">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form action="/edituser/<%= users.iduser %>" method="post">
                    <div class="form-group">
                        <input type="text" value="<%= users.firstname %>" name="firstname" placeholder="First Name" class="form-control">
                    </div>  
                    <div class="form-group">
                        <input type="text" value="<%= users.lastname %>" name="lastname" placeholder="Last Name" class="form-control">
                    </div> 
                    <div class="form-group">
                        <input type="text" value="<%= users.email %> "name="email" placeholder="Email" class="form-control">
                    </div>  
                    <div class="form-group">
                        <input type="password" value="<%= users.pass %>" name="pass" placeholder="Password" class="form-control">
                    </div>  
                    <label for="rol">User privileges</label>
                    <div class="form-group">                
                            <select id="privileges" name="privileges" value="<%= users.pass %>"  class="form-control" required>                             
                                <option value="user">User</option>
                                <option value="Admin">Admin</option>
                              </select> 
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save user</button>                       
                </form>
            </div>
</div>
    </div>
</div>
<link rel="stylesheet" type="text/css" href="/footerstyle.css">

<%-include('index_partials/footer.ejs');-%>