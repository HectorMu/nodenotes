<div class="container-fluid">
  <div id="adduser" class="modal fade modal-fullscreen-sm-down" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content ">
          <div class="modal-header bg-dark">
            <h5 class="modal-title text-white" style="font-weight: bold; font-size: 34px;"> Sign up new user</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true" class="text-white">&times;</span>
            </button>
            <!--<a href="/users" class="close" >
              <span aria-hidden="true">&times;</span>
          </a>-->
          </div>
          <div class="modal-body">
              <form action="/adduser" method="post">
                  <div class="form-group">
                      <input type="text" name="firstname" placeholder="First Name" class="form-control">
                  </div>  
                  <div class="form-group">
                      <input type="text" name="lastname" placeholder="Last Name" class="form-control">
                  </div> 
                  <div class="form-group">
                      <input type="text" name="email" placeholder="Email" class="form-control">
                  </div>  
                  <div class="form-group">
                      <input type="password" name="pass" placeholder="Password" class="form-control">
                  </div>  
                  <label for="rol">User privileges</label>
                    <div class="form-group">                
                            <select id="privileges" name="privileges" value="user"  class="form-control" required>                             
                                <option value="user">User</option>
                                <option value="Admin">Admin</option>
                              </select> 
                    </div>
                  <button type="submit" class="btn btn-outline-dark btn-block">Save user</button>  
                  <button type="button" data-dismiss="modal" class="btn btn-outline-dark btn-block">Cancel</button>                      
              </form>                
          </div>
          </div>
        </div>
      </div>
    </div>
</div>


